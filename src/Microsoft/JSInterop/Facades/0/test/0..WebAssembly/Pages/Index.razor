@page "/"

<NUnitTests AssemblyType="typeof(Index)" BeforeAssertingTasks="BeforeAssertingTasks" />

@code {
    private async Task BeforeAssertingTasks(IServiceProvider serviceProvider)
    {
        NUnitEntryPoint.AssertableTasks = await serviceProvider
            .ToTasksTestsAnnotatedClasses()
            .AssignInstancesAndPrepareTasksAssertion(typeof(Program).Assembly);
    }
} 